<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.mcxtzhang.swipemenulib.SwipeMenuLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:ios="true"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/Rl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/WriterOfComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:text="지나가는 영혼"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/contentOfComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/WriterOfComment"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:text="댓글내용"
            android:textColor="#505050" />

        <TextView
            android:id="@+id/likeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/contentOfComment"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:text="공감 0개"
            android:textColor="#505050" />

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/contentOfComment"
            android:layout_marginEnd="30dp"
            android:background="@drawable/btn_like" />

        <View
            android:id="@+id/view"
            android:layout_width="320dp"
            android:layout_centerHorizontal="true"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#bcbcbc" />



    </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnDel"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#f5ff5b66"
            android:text="삭제"
            android:textColor="@android:color/white"/>

    </com.mcxtzhang.swipemenulib.SwipeMenuLayout>


</LinearLayout>
